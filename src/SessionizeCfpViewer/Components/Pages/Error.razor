@page "/Error"
@using System.Diagnostics

<PageTitle>Error</PageTitle>

<h1 class="text-danger">Error</h1>
<h2 class="text-danger">An unexpected error occurred.</h2>

@if (ShowRequestId)
{
    <p>
        <strong>Reference ID:</strong> <code>@RequestId</code>
    </p>
}

<p>This Blazor WebAssembly application does not expose server diagnostics. Reload the page or return to the home screen.</p>
<p><a href="/" class="btn btn-outline-primary">Back to Home</a></p>

@code {
    private string? RequestId { get; set; } = Activity.Current?.Id ?? Guid.NewGuid().ToString("N");
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);
}
